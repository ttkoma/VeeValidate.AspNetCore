<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Authors>Thomas Greensill</Authors>
    <PackageId>VeeValidate.AspNetCore.FluentValidation</PackageId>
    <Product>VeeValidate.AspNetCore.FluentValidation</Product>
    <Company />
    <RepositoryUrl>https://github.com/tgreensill/VeeValidate.AspNetCore</RepositoryUrl>
    <Description>A simple library for changing the html validation attributes generated by FluentValidation.AspNetCore to VeeValidate rules.</Description>
    <PackageTags>AspNetCore, Vue, VeeValidate, FluentValidation</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.DataAnnotations" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
    <PackageReference Include="FluentValidation.AspNetCore" Version="8.6.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\VeeValidate.AspNetCore\VeeValidate.AspNetCore.csproj" />
  </ItemGroup>

</Project>
