<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Thomas Greensill</Authors>
    <Company />
    <Description>A simple library for changing the html validation attributes generated by ASP.NET to VeeValidate rules.</Description>
    <RepositoryUrl>https://github.com/ttkoma/VeeValidate.AspNetCore</RepositoryUrl>
    <PackageTags>AspNetCore, Vue, VeeValidate</PackageTags>
    <PackageId>VeeValidate.AspNetCore</PackageId>
    <Version>1.0.0</Version>
    <Copyright>https://github.com/tgreensill</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.DataAnnotations" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
  </ItemGroup>

</Project>
